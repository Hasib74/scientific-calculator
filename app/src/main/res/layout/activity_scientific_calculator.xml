                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="4sp"
                android:text="@string/inverse_cos"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/inverse_tan"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="4sp"
                android:text="@string/inverse_tan"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/expo"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="4sp"
                android:text="@string/expo"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/ten_power_x"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="4sp"
                android:text="@string/ten_power"
                android:textSize="13sp" />
        </LinearLayout>

        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/fourth_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="6">

            <Button
                android:id="@+id/hys"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_marginEnd="1sp"
                android:layout_marginRight="1sp"
                android:layout_weight="1"
                android:padding="8sp"
                android:text="@string/rnd"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/sin_sign"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_marginEnd="1sp"
                android:layout_marginRight="1sp"
                android:layout_weight="1"
                android:padding="8sp"
                android:text="@string/sin_sign"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/cos_sign"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_marginEnd="1sp"
                android:layout_marginRight="1sp"
                android:layout_weight="1"
                android:padding="8sp"
                android:text="@string/cos_sign"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/tan_sign"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_marginEnd="1sp"
                android:layout_marginRight="1sp"
                android:layout_weight="1"
                android:padding="8sp"
                android:text="@string/tan_sign"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/natural_log"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_marginEnd="1sp"
                android:layout_marginRight="1sp"
                android:layout_weight="1"
                android:padding="8sp"
                android:text="@string/natural_log"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/log"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="8sp"
                android:text="@string/log"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold" />
        </android.support.v7.widget.LinearLayoutCompat>

        <LinearLayout
            android:id="@+id/fifth_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="6">

            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="4sp" />

            <TextView
                android:id="@+id/cube_root"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="4sp"
                android:text="@string/cube_root"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/cube"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="4sp"
                android:text="@string/cube"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/one_over_x"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="4sp"
                android:text="@string/one_over_x"
                android:textSize="13sp" />

            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="4sp"
                android:text="" />

            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="4sp"
                android:text="" />
        </LinearLayout>

        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/sixth_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="6">

            <Button
                android:id="@+id/x_power_y"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_marginEnd="1sp"
                android:layout_marginRight="1sp"
                android:layout_weight="1"
                android:padding="8sp"
                android:text="@string/x_power_y"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/square_root"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_marginEnd="1sp"
                android:layout_marginRight="1sp"
                android:layout_weight="1"
                android:padding="8sp"
                android:text="@string/square_root"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/x_square"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_marginEnd="1sp"
                android:layout_marginRight="1sp"
                android:layout_weight="1"
                android:padding="8sp"
                android:text="@string/x_square"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/percent"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_marginEnd="1sp"
                android:layout_marginRight="1sp"
                android:layout_weight="1"
                android:padding="8sp"
                android:text="@string/percent"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/open_bracket"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_marginEnd="1sp"
                android:layout_marginRight="1sp"
                android:layout_weight="1"
                android:padding="8sp"
                android:text="@string/open_bracket"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/close_bracket"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="8sp"
                android:text="@string/close_bracket"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold" />
        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/seventh_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8sp">

            <Button
                android:id="@+id/seven_button"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_marginEnd="1sp"
                android:layout_marginRight="1sp"
                android:layout_weight="1"
                android:padding="8sp"
                android:text="@string/seven_button"
                android:textAllCaps="false"
                android:textSize="24sp" />

            <Button
                android:id="@+id/eight_button"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_marginEnd="1sp"
                android:layout_marginRight="1sp"
                android:layout_weight="1"
                android:padding="8sp"
                android:text="@string/eight_button"
                android:textAllCaps="false"
                android:textSize="24sp" />

            <Button
                android:id="@+id/nine_button"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_marginEnd="1sp"
                android:layout_marginRight="1sp"
                android:layout_weight="1"
                android:padding="8sp"
                android:text="@string/nine_button"
                android:textAllCaps="false"
                android:textSize="24sp" />

            <Button
                android:id="@+id/single_delete"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_marginEnd="1sp"
                android:layout_marginRight="1sp"
                android:layout_weight="1"
                android:padding="8sp"
                android:text="@string/single_delete"
                android:textAllCaps="false"
                android:textSize="24sp" />

            <Button
                android:id="@+id/clear"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_marginEnd="1sp"
                android:layout_marginRight="1sp"
                android:layout_weight="1"
                android:padding="8sp"
                android:text="@string/clear"
                android:textAllCaps="false"
                android:textSize="24sp" />
        </android.support.v7.widget.LinearLayoutCompat>

        <LinearLayout
            android:id="@+id/eight_row"
            android:layout_width="match_parent"
            android:layout_height="32sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/factorial"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="4sp"
                android:text="@string/factorial"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/combination"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="4sp"
                android:text="@string/combination"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/permutation"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="4sp"
                android:text="@string/permutation"
                android:textSize="20sp" />

            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="4sp"
                android:text="" />

            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="4sp"
                android:text="" />
        </LinearLayout>

        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/ninth_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/four_button"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_marginEnd="1sp"
                android:layout_marginRight="1sp"
                android:layout_weight="1"
                android:padding="8sp"
                android:text="@string/four_button"
                android:textAllCaps="false"
                android:textSize="24sp" />

            <Button
                android:id="@+id/five_button"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_marginEnd="1sp"
                android:layout_marginRight="1sp"
                android:layout_weight="1"
                android:padding="8sp"
                android:text="@string/five_button"
                android:textAllCaps="false"
                android:textSize="24sp" />

            <Button
                android:id="@+id/six_button"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_marginEnd="1sp"
                android:layout_marginRight="1sp"
                android:layout_weight="1"
                android:padding="8sp"
                android:text="@string/six_button"
                android:textAllCaps="false"
                android:textSize="24sp" />

            <Button
                android:id="@+id/multiplication"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_marginEnd="1sp"
                android:layout_marginRight="1sp"
                android:layout_weight="1"
                android:padding="8sp"
                android:text="@string/multiplication"
                android:textAllCaps="false"
                android:textSize="24sp" />

            <Button
                android:id="@+id/division"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_marginEnd="1sp"
                android:layout_marginRight="1sp"
                android:layout_weight="1"
                android:padding="8sp"
                android:text="@string/division"
                android:textAllCaps="false"
                android:textSize="24sp" />
