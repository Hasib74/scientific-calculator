<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.akhil.calculator.ScientificCalculator">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <include
        android:id="@+id/include"
        layout="@layout/content_scientific_calculator" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linearLay0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/top_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/shift_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8sp" />

            <TextView
                android:id="@+id/float_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8sp"
                android:text="@string/no_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8sp" />

            <TextView
                android:id="@+id/degree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8sp"
                android:text="@string/deg" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/display_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:cursorVisible="true"
                android:gravity="end"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:text="@string/zero_button"
                android:textSize="40sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/first_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="4sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="4sp" />

            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/second_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="6">

                <Button
                    android:id="@+id/shift"
                    android:layout_width="3sp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="1sp"
                    android:layout_marginRight="1sp"
                    android:layout_weight="1"
                    android:padding="8sp"
                    android:text="@string/shift"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/rad"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="1sp"
                    android:layout_marginRight="1sp"
                    android:layout_weight="1"
                    android:padding="8sp"
                    android:text="@string/rad"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/abs"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="1sp"
                    android:layout_marginRight="1sp"
                    android:layout_weight="1"
                    android:padding="8sp"
                    android:text="@string/abs"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/mr"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="1sp"
                    android:layout_marginRight="1sp"
                    android:layout_weight="1"
                    android:padding="8sp"
                    android:text="@string/mr"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/ms"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="1sp"
                    android:layout_marginRight="1sp"
                    android:layout_weight="1"
                    android:padding="8sp"
                    android:text="@string/ms"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/m_plus"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="8sp"
                    android:text="@string/m_plus"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </android.support.v7.widget.LinearLayoutCompat>

            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="4sp" />

            <TextView
                android:id="@+id/rcl"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="4sp"
                android:text="@string/no_text" />

            <TextView
                android:id="@+id/sto"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="4sp"
                android:text="@string/no_text" />

            <TextView
                android:id="@+id/m_minus"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="4sp"
                android:text="@string/m_minus" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/third_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="6">

            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="4sp" />

            <TextView
                android:id="@+id/inverse_sin"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
